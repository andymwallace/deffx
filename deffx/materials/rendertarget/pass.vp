// via britzl
// this will make your post processing collection's bg show the processing
// it's interesting but you probably want to use quad.vp instead so your editor is cleaner
attribute mediump vec4 position;
attribute mediump vec2 texcoord0;

varying mediump vec2 var_texcoord0;

void main(){
	gl_Position = position;
	var_texcoord0 = texcoord0;
}